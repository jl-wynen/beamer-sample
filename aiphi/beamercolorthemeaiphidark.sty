\mode<presentation>

% base colours
\definecolor{aiphiblue}      {RGB}{0,84,159}
\definecolor{aiphibordeaux}  {RGB}{161,16,53}
\definecolor{aiphidark}      {RGB}{45,38,50}
\definecolor{aiphidarkachrom}{RGB}{22,22,22}
\definecolor{aiphigreen}     {RGB}{87,171,39}
\definecolor{aiphiorange}    {RGB}{224,71,40}
\definecolor{aiphipetrol}    {RGB}{0,97,101}
\definecolor{aiphired}       {RGB}{204,7,30}
\definecolor{aiphiviolet}    {RGB}{97,33,88}
\definecolor{aiphiyellow}    {RGB}{255,237,0}

% colours for specific purposes
\colorlet{aiphibackground}{aiphidarkachrom}
\colorlet{aiphitext}{white!80!aiphidarkachrom}
\colorlet{aiphiemph1}{aiphired!85!white}
\colorlet{aiphiemph2}{aiphiblue!85!white}
\colorlet{aiphiemph3}{aiphigreen!80!aiphitext}


% beamer colours
\setbeamercolor{background canvas}        {bg=aiphibackground}
\setbeamercolor{normal text}              {fg=aiphitext}
\setbeamercolor{item}                     {fg=aiphibordeaux!90!white}
\setbeamercolor{title}                    {bg=white, fg=aiphired!85!white}
\setbeamercolor{frametitle}               {fg=aiphired!85!white}
\setbeamercolor{section number in toc}    {fg=aiphibordeaux}
\setbeamercolor{section in toc}           {fg=aiphitext}
\setbeamercolor{subsection number in toc} {fg=aiphibordeaux}
\setbeamercolor{subsection in toc}        {fg=aiphitext}
\setbeamercolor{section in head/foot}     {bg=aiphired, fg=white}
\setbeamercolor{subsection in head/foot}  {bg=aiphired, fg=white}
\setbeamercolor{author in head/foot}      {bg=aiphidarkachrom, fg=white!65!aiphidarkachrom}
\setbeamercolor{title in head/foot}       {bg=aiphidarkachrom, fg=white!65!aiphidarkachrom}
\setbeamercolor{date in head/foot}        {bg=aiphidarkachrom, fg=white!65!aiphidarkachrom}
\setbeamercolor{alerted text}             {fg=aiphired}
\setbeamercolor{block title}              {bg=aiphitext!20!aiphidark, fg=aiphitext}
\setbeamercolor{block body}               {bg=aiphitext!70!aiphidark, fg=aiphibackground}
\setbeamercolor{block title alerted}      {bg=aiphired!60!aiphidarkachrom, fg=aiphitext}
\setbeamercolor{block body alerted}       {bg=aiphired!30!aiphidarkachrom, fg=aiphitext}
\setbeamercolor{block title example}      {bg=aiphigreen!70!aiphidarkachrom, fg=aiphitext}
\setbeamercolor{block body example}       {bg=aiphigreen!30!aiphidarkachrom, fg=aiphitext}
\setbeamercolor{progress bar in head/foot}{bg=aiphidarkachrom, fg=aiphiblue!90!white}
\setbeamercolor{frame border}             {bg=aiphiemph1}
\setbeamercolor{wip}                      {fg=aiphiorange}

\mode<all>